

<% @page.errors.full_messages.each do |msg| %>
  <p><%= msg %></p>
<% end %>

<%= form_for [:admin, @page] do |f| %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>

<%= link_to 'Terug', :controller => 'pages' %>

<script type="text/javascript">
  CKEDITOR.replace( 'page_content', { language: 'nl_NL'});
</script>

