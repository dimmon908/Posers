<h2>Teksten</h2>
<table>
  <tr>
    <th>Title</th>
  </tr>
<% for page in @pages %>
  <tr>
    <td><%= link_to page.title, "/pagina/#{page.id}", target: "_blank" %></td>
    <td><%= link_to 'Wijzigen', :action => 'edit', :id => page.id %></td>
    <td><%= button_to('Verwijderen', [:admin, page], :confirm => 'Zeker weten?', :method => :delete) %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'Nieuwe page', :action => 'new' %>
