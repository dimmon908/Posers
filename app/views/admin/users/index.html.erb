<h2><%= @title %> (<%= link_to 'Groepen', :action => 'roles' %>)</h2>
<table id="myTable" class="tablesorter"> 
<thead> 
<tr> 
	<th>Nickname</th> 
	<th>Voornaam</th>
	<th>Tussenvoegsel</th>
  <th>Achternaam</th> 
  <th>E-mail</th> 
  <th>Rol</th> 
	<th>Lid sinds</th>
</tr> 
</thead> 
<tbody> 
	<% @users.each do |u| %>
	<tr id="<%= u.id.to_s %>">
  	<td><%=h u.nickname %>  (<%= link_to 'wijzigen', :action => 'user',  :id => u.id %> / <%= link_to 'verwijderen', :action => 'deleteuser',  :id => u.id %>) </td>
  	<td><%=h u.voornaam.force_encoding('UTF-8') unless u.voornaam.nil? %></td>
  	<td><%=h u.tussenvoegsel.force_encoding('UTF-8') unless u.tussenvoegsel.nil? %></td>
  	<td><%=h u.achternaam.force_encoding('UTF-8') unless u.achternaam.nil? %></td>
  	<td><%=h u.email %></td>
  	<td><% if !u.role_id.blank? %><%=h u.role.name %><% end %></td>
  	<td><%=h u.created_at.strftime('%Y-%m-%d') %></td>
	</tr>
  <% end %>
</tbody> 
</table> 
<%= will_paginate @users %>
<%= link_to 'Publiceer leden in CSV', :action => 'csv' %>
