<h2>Wijzig interne mail <%= @mail.title -%></h2>
<% @mail.errors.full_messages.each do |msg| %>
  <span><%= msg %></span>
<% end %>
<%= form_for @mail, :url => { :action => "editintmail", :id => @mail.id } do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :message %><br />
    <%= f.text_area :message, cols: 110 %>
  </p>
  <p>
    <%= f.submit "Wijzigen" %>
  </p>
  
<% end -%>
<h4>Beschikbare variabelen</h4>
<p><%= simple_format(h(@mail.vars)) -%></h4>
