<h2>Wijzig mail</h2>
<% @mail.errors.full_messages.each do |msg| %>
  <span><%= msg %></span>
<% end %>
<%= form_for @mail, :url => { :action => "edit" } do |f| %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit "Wijzigen" %>
  </p>
  
<% end -%>
