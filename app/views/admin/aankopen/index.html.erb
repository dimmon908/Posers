<h2>Aankoop</h2>
<table class=generic>
	<tr>
		<td>Gekocht op</td>
		<td>Door</td>
		<td>Van</td>
		<td>Status</td>
		<td>&nbsp;</td>
	</tr>
  <% @aankopen.each do |a| %>
    <% if a.user and a.kunstvoorwerp and a.kunstvoorwerp.user %>
    <tr>
      <td> <%= a.created_at %> </td>
      <td> <%= a.user.voornaam.force_encoding('UTF-8') %>	<%= a.user.achternaam %>	</td>
      <td>
        <%= link_to(sanitize(a.kunstvoorwerp.user.voornaam.force_encoding('UTF-8') + ' ' + a.kunstvoorwerp.user.achternaam), kunstenaar_url(:name => a.kunstvoorwerp.user.intname)) -%>		
      </td>
      <td> <%=h a.status %> </td>
      <td><%= link_to 'Bekijk gegevens', aankoop_url(:id => a.id) %></td>
    </tr>
    <% end %>
  <% end %>
</table>
<%= will_paginate @aankopen %>
