<%= form_for :user do |form| -%>
<h2>Wachtwoord opnieuw instellen</h2>
<%= error_messages_for "user", :header_message => "Fouten opgetreden tijdens instellen wachtwoord", :message => "De volgende fouten speelden op:" %>
<table id="user-full">
    <tr>
      <td class="label">Wachtwoord:</td>
      <td><%= form.password_field :password, :size => 30, :maxlength => 40, :value => '' -%></td>
    </tr>
    <tr class="gray">
      <td class="label">Wachtwoord ter bevestiging</td>
      <td>
        <%= form.password_field :passwordconf, :size => 30, :maxlength => 40, :value => '' -%>
      </td>
    </tr>
 	<tr class="noborder">
      <td class="label">&nbsp;</td>
      <td><%= submit_tag "Wijzigen", :class => "submit" -%></td>
    </tr>
</table>
<% end -%>